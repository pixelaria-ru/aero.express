.order-form
  padding 0 85px 100px

  .left-side
    margin-right 30px
    p
      color #4e4e4e
      font-family "PT Sans"
      font-size 16px
      font-weight 400
      line-height 32px
  .right-side
    max-width 450px
    width: 100%;
    h6
      color #27a4eb
      font-family "PT Sans"
      font-weight 700
      margin-top 20px
    p
      margin-top 15px
      color #4e4e4e
      font-family "PT Sans"
      font-size 14px
      font-weight 400
      line-height 24px
      &.warnning
        color #4e4e4e
        font-family "PT Sans"
        font-size 16px
        font-weight 400
        line-height 27px
        padding 20px 20px 20px 15px
        border-left 5px solid #f07679
        position relative
        &:after
          position: absolute;
          z-index: -1;
          top: 0
          right: 0
          width: 100%;
          height: 100%;
          content: "";
          background: repeating-linear-gradient(45deg,#f9f9f9,#f9f9f9 4px,#f0f0f0 0,#f1f1f1 6px);
      a
        color #27a4eb
        text-decoration underline
