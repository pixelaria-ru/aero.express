.category-of-room
  h2
    color #4e4e4e
    font-family Montserrat
    font-size 36px
    line-height 36px
    font-weight 400
    margin 70px 0
    display flex
    align-items center
    justify-content center
    &:before
      content ''
      display block
      width 35px
      height 2px
      margin-right 20px
      margin-top 7px
      background $blue-light
    &:after
      content ''
      display block
      width 35px
      height 2px
      margin-left 20px
      margin-top 7px
      background $blue-light
  .flex
    padding 0 85px
  &__left-side
    .category-of-room__block
      max-width 750px
      max-height 500px
      margin-right 10px
      &:hover
        h3
          bottom: 50px
        p
          bottom: 40px
          opacity 1
      h3
        padding 30px 40px
        transition .55s
      p
        opacity 0
        transition .55s
        text-shadow 0 2px 24px rgba(0, 0, 0, 0.5)
        color #ffffff
        font-family sans-serif
        font-size 16px
        line-height 30px
        position absolute
        left 40px
        bottom: 0px


  &__right-side
    .category-of-room__block
      max-width 350px
      max-height 245px
      cursor pointer
      position relative
      p
        opacity 0
        transition .55s
        text-shadow 0 2px 24px rgba(0, 0, 0, 0.5)
        color #ffffff
        font-family sans-serif
        max-width 260px
        font-size 16px
        line-height 30px
        position absolute
        left 0
        right 0
        margin: auto;
        bottom: 0px
        text-align: center;
      &:hover
        h3
          bottom: calc(66% - 24px / 2);
        p
          opacity 1
          bottom: 50px
      h3
        text-align center
        left 0
        right 0
        transition .55s
        bottom calc( 50% - 24px / 2)

      &:first-child
        margin-bottom 10px
  &__block
    position relative
    height max-content
    overflow hidden
    transform translateZ(0)
    &:hover
      img,span
        filter blur(5px)
      a
        &:before
          z-index 3
          position absolute
          content ''
          size calc(100% - 30px)
          border 1px solid #fff
          margin 15px
    span
      position absolute
      top 0
      background $blue
      right 20px
      color #ffffff
      font-family Montserrat
      font-size 16px
      font-weight 400
      padding 10px
      z-index 2
    img
      transition .55s

    h3
      position absolute
      bottom 0
      line-height 24px
      color #ffffff
      font-family Montserrat
      font-size 24px
      font-weight 400
