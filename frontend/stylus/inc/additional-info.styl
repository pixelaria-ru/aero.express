.additional-info
  .container
    padding 100px 85px
    justify-content space-between
  &__left-side
    max-width 500px
  &__right-side
    max-width 550px
  h2
    color #404040
    font-family Montserrat
    font-size 36px
    font-weight 400
    margin-bottom 30px
    display flex

    &:before
      content ''
      display block
      width 6px
      height 50px
      background-color #27a4eb
      margin-right 20px
  p
    color #565656
    font-family Montserrat
    font-size 16px
    font-weight 400
    line-height 30px
    margin-bottom 20px
    white-space no-wrap
    &:nth-child(odd)
      width 330px
      padding-right 15px
    &:nth-child(even)
      width calc(100% - 330px)

    span
      color #27a4eb
      font-size 24px
