.header
  padding 0 85px
  justify-content space-between
  position absolute
  left 0
  top 0
  right 0
  align-items center
  z-index 2
  &.active
    position fixed
  &__left-side
    align-items center
    z-index 99
  &__right-side
    z-index 99
    margin-top 24px
    align-items center
    .button.button--pink
      padding 7px 10px 9px
      font-size 14px
.logotype
  width 183px
  height 110px
  background-color #27a4eb
  align-items center
  padding 20px
  &:before
    content ''
    border-radius 50%
    width 70px
    height 70px
    border 2px solid #ffffff
  span
    color #ffffff
    font-family "PT Sans"
    font-size 24px
    font-weight 700
    line-height 26px
    font-style italic
    text-align right
    margin-left -50px
    background $blue
.telephone
  margin-left 50px
  margin-top 24px
  a
    line-height 24px
    color #404040
    font-family "PT Sans"
    font-size 24px
    font-weight 400
.lang
  span
    color #404040
    font-family "PT Sans"
    font-size 18px
    font-weight 400
    text-transform uppercase
    margin-right 10px
    &:last-child
      margin-right 35px
    &.active
      color #27a4eb
.menu
  margin-left 30px
  width 50px
  height 28px
  background: 0
  position relative
  outline 0
  p
    transform: rotate(-90deg);
    position: absolute;
    left: -23px;
    top: 9px;
    font-size 10px
    font-weight 400
  &.active
    span
      transform: rotate(45deg);
      width: 50px
      &:after
        opacity 0
      &:before
        transform: rotate(-90deg) translate(-13px);
  span
    width 30px
    display: block;
    height 4px
    background-color #404040
    cursor pointer
    position relative
    transition: .55s

    &:before
      content ''
      width 50px
      height 4px
      margin-top -12px
      position absolute
      background-color #404040
      transition: .55s
      left 0
      top 0
    &:after
      content ''
      width 40px
      left 0
      height 4px
      margin-top 12px
      position absolute
      background-color #404040


.main-menu
  position: fixed;
  width: 100%
  left: 0
  top 0
  opacity 0
  transform: translateY(-1000px);
  transition: .55s
  &.active
    transform: translateY(0px);
    opacity 1
  .navigation
    max-width: 1280px
    width 100%
    text-align: right;
    margin:  auto;
    background-color: #ffffff;
    padding: 160px 85px 120px
    .list-item
      margin-bottom: 30px
      &.active
        a
          color: #27a4eb;
          &:hover
            &:after
              width 0%
      a
        color: #4e4e4e;
        line-height: 36px
        font-family: Montserrat;
        font-size: 36px;
        font-weight: 400;
        position relative
        &:after
          content ''
          position absolute
          left 0
          width 0%
          background #4e4e4e
          bottom -2px
          height 2px
          transition .55s
        &:hover
          &:after
            width 100%
.navigation-bottom
  padding: 0 85px
  margin-top: -50px
  .list-item
    a
      margin-right: 60px
      color: #4e4e4e;
      line-height: 18px
      font-family: "PT Sans";
      font-size: 18px;
      font-weight: 700;
      &:hover
        color: #27a4eb;
