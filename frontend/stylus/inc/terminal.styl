.terminal
  .initial-screen .info:before,
  .initial-screen .info:after
    display none
  .initial-screen .container
    height: auto;
    padding: 120px 0 65px;
  .initial-screen .info
    max-width: 515px;
    margin: 40px 0 0 70px;
  .initial-screen .button
    margin-top: 0px;

  .slider
    width: 630px;
    height: 420px;
    img
      width: 630px;
      height: 420px;


.terminal-info
  margin-top 30px
  align-items center
  p
    color: #4e4e4e;
    font-size: 14px;
    line-height: 22px;
    margin-left 17px


.select-room
  padding: 0 85px;
  h2
    color #4e4e4e
    font-family Montserrat
    font-size 36px
    display flex
    align-items center
    justify-content center
    &:before
      content ''
      display block
      width 35px
      height 2px
      margin-right 20px
      margin-top 7px
      background $blue-light
    &:after
      content ''
      display block
      width 35px
      height 2px
      margin-left 20px
      margin-top 7px
      background $blue-light
    font-weight 400
    margin 70px 0
    display flex
    align-items center
    justify-content center
    &:before
      content ''
      display block
      width 35px
      height 2px
      margin-right 20px
      margin-top 7px
      background $blue-light
    &:after
      content ''
      display block
      width 35px
      height 2px
      margin-left 20px
      margin-top 7px
      background $blue-light
  &__room
    max-width: 206px;
    height: 268px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    background-color: #ffffff;
    margin-right 20px
    &:hover
      .button
        transform scale(1)
        opacity 1
    &:last-child
      margin-right 0
  &__room-img
      height: 180px;
      position relative
      .button
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        margin auto
        width: max-content;
        padding 13px 15px
        max-height 40px
        font-size: 13px;
        transform scale(0.7)
        transition .33s
        opacity 0
  &__room-info
    padding 21px
    margin-top: -5px;
    position relative
    height: 90px;
    h3
      color: #4e4e4e;
      font-family: "PT Sans";
      font-size: 18px;
      font-weight: 400;
      line-height: 24px;
    .mans-icon
      position: absolute;
      bottom: 15px;
      right: 15px;
    .man-user
      width: 15px;
      height: 15px;
      background-image url(../images/man-user.png)
      background-repeat no-repeat
      display block

  .remarkus
    font: 400 1rem/1.6875rem 'PT Sans';
    margin-bottom: 90px;
    padding: 18px 25px;
    color: #4e4e4e;
    border: 1px solid #f2f2f2;
    border-left: 5px solid #27a4eb;
    margin-top 50px


.terminal
  .advantages
    h2
      margin-bottom 35px
    &__left-side
      p
        color: #525252;
        font-family: "PT Sans";
        font-size: 18px;
        line-height: 32px;
        font-style italic
      .terminaler__list
        margin-top 20px
        .terminaler__item
          display flex
          align-items center
          &:nth-child(2)
            &:before
              content '2'
          &:nth-child(3)
            &:before
              content '3'
          &:nth-child(4)
            &:before
              content '4'
          &:nth-child(5)
            &:before
              content '5'
          &:before
            content '1'
            width: 20px;
            display flex
            align-items center
            justify-content center
            border-radius 50%
            margin-right 15px
            text-align center
            color: #ffffff;
            font-family: Georgia;
            font-size: 14px;
            height: 20px;
            background-color: #27a4eb;
            display block
        p
          color: #525252;
          font-size: 18px;
          line-height: 32px;
          font-style normal
          font-family: "PT Sans";
    &__right-side
      max-width: 668px;
      height: 360px;
      background-color: #f7f7f7;
      border 0
      width 100%
      &:before
        display none
