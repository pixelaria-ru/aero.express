$blue = #27a4eb
$blue-light = #76c4f0
$repeat = repeating-linear-gradient(45deg, #006faf,#006faf 1px, #fff0 2px,#fff0 4px)
@import '../fonts/fonts.css'
@import 'inc/reset.styl'

.container
  max-width 1280px
  width 100%
  margin auto
.flex
  display flex
@import 'inc/header.styl'
@import 'inc/initial-screen.styl'
@import 'inc/for-who.styl'
@import 'inc/category-of-room.styl'
@import 'inc/advantages.styl'
