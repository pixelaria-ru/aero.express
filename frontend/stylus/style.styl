.map
  .container
    height 400px
    background-color #f2f2f2
hr
  max-width: 1110px
  margin:  0 auto;
  border 0
  height 10px
  background-image linear-gradient(180deg, #dbdbdb 0%, rgba(219, 219, 219, 0) 100%, rgba(219, 219, 219, 0) 100%)
  opacity 0.3
.h2-hidden,.hid
  display none
@import 'inc/adaptive.styl'
